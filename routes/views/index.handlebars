<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" href="/styles/style.css"> <!-- Agrega estilos si es necesario -->
</head>
<body>
    <h1>Product List</h1>
    <div id="product-list">
        {{#each products}}
            <div class="product-item">
                <h2>{{this.name}}</h2>
                <p>{{this.description}}</p>
                <p>Price: ${{this.price}}</p>
                <p>Category: {{this.category}}</p>
                <a href="/products/{{this._id}}">View Details</a>
                <form action="/carts/{{userId}}/items" method="POST">
                    <input type="hidden" name="productId" value="{{this._id}}">
                    <input type="number" name="quantity" min="1" value="1">
                    <button type="submit">Add to Cart</button>
                </form>
            </div>
        {{/each}}
    </div>

    <!-- Pagination Links -->
    <div id="pagination">
        {{#if prevPage}}
            <a href="/products?page={{prevPage}}&limit={{limit}}">Previous</a>
        {{else}}
            <span>Previous</span>
        {{/if}}

        {{#if nextPage}}
            <a href="/products?page={{nextPage}}&limit={{limit}}">Next</a>
        {{else}}
            <span>Next</span>
        {{/if}}
    </div>
</body>
</html>
